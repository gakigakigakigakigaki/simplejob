<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname + "さんの情報" %>
      </h2>
      <% if user_signed_in? %>
      <%= link_to 'シフト入力', memos_path, method: :get%>
      <% end %>
      <table class="table">
        <tbody>
        <tr>
          <th class="table__col1">苗字</th>
          <td class="table__col2"><%= @user.last_name %></td>
        </tr>
        <tr>
          <th class="table__col1">名前</th>
          <td class="table__col2"><%= @user.first_name %></td>
        </tr>
        <tr>
          <th class="table__col1">性別</th>
          <td class="table__col2"><%= @user.sex %></td>
        </tr>
        <tr>
          <th class="table__col1">年齢</th>
          <td class="table__col2"><%= @user.age %></td>
        </tr>
        <tr>
          <th class="table__col1">誕生日</th>
          <td class="table__col2"><%= @user.birthday %></td>
        </tr>
        </tbody>
      </table>
      <table class="memo table table-bordered">
         <thead>
            <tr>
                <th>用件</th>
                <th>勤務開始可能時間</th>
                <th>勤務終了希望時間</th>
            </tr>
         </thead>
           <% @memos.each do |user| %>
             <tbody>
                 <tr>
                     <td><%= user.title%></td>
                     <td><%= user.start_time.strftime("%Y-%m-%d %H:%M")%></td>
                     <td><%= user.end_time.strftime("%Y-%m-%d %H:%M")%></td>
                     
					</tr>
				</tbody>
			<% end %>
  		</table>
    </div>
  </div>
</div>

