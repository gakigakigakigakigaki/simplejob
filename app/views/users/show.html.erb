<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname + "さんの情報" %>
      </h2>
      <table class="table">
        <tbody>
        <tr>
          <th class="table__col1">苗字</th>
          <td class="table__col2"><%= @user.last_name %></td>
        </tr>
        <tr>
          <th class="table__col1">名前</th>
          <td class="table__col2"><%= @user.first_name %></td>
        </tr>
        <tr>
          <th class="table__col1">性別</th>
          <td class="table__col2"><%= @user.sex %></td>
        </tr>
        <tr>
          <th class="table__col1">年齢</th>
          <td class="table__col2"><%= @user.age %></td>
        </tr>
        <tr>
          <th class="table__col1">誕生日</th>
          <td class="table__col2"><%= @user.birthday %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

