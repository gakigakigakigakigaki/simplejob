<h2>企業新規登録</h2>
<%= form_with model: @company, url: company_registration_path, id: 'new_company', class: 'new_company', local: true do |f| %>

<%= render "devise/shared/error_messages", resource: resource %>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label company_name, '企業名' %><br />
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
  <%= f.label :last_name, '苗字(全角)' %><br />
  <%= f.text_field :last_name %>

  <div class="field">
  <%= f.label :first_name, '名前(全角)'%><br />
  <%= f.text_field :first_name %>

  <div class="field">
  <%= f.label :last_name_kana, '苗字(カナ)'%><br />
  <%= f.text_field :last_name_kana %>

  <div class="field">
  <%= f.label :first_name_kana, '名前(カナ)'%><br />
  <%= f.text_field :first_name_kana %>

  <div class="field">
  <%= f.label :phone_number, '電話番号'%><br />
  <%= f,text_field :phone_number %>

  <div class="field">
    <%= f.label :postal_code, '郵便番号'%><br />
    <%= f.text_field :postal_number %>

  <div class="field">
    <%= f.label :prefecture_id, '都道府県'%><br />
    <%= f.collection_select(:prefecture_id, prefecture.all, :id, :name, {}, {class:"select-box", id:"company"}) %>

  <div class="field">
    <%= f.label :city, '市区町村'%><br />
    <%= f.text_field :city %>

  <div class="field">
    <%= f.label :house_number, '番地'%><br />
    <%= f.text_fild :house_number %>

    <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>